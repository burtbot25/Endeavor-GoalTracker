<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">

        <!--<Button-->
        <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:text="Add a Goal"-->
        <!--android:id="@+id/add_goal"/>-->

        <!--<Button-->
        <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:text="Survey"-->
        <!--android:id="@+id/survey_btn"/>-->
        <!--<Button-->
        <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
        <!--android:text="Alarm"-->
        <!--android:id="@+id/alarm"/>-->

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="-Endeavor Dashboard-"
                  android:textStyle="bold"
                  android:textSize="30dp"
                  android:layout_gravity="center"
                  android:textColor="@color/colorPrimaryDark"
        />
        <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/list_view">
        </ListView>


    </LinearLayout>
    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
    >
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_bot"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="bottom"
        >
            <RelativeLayout
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
            >
                <ImageButton android:layout_width="24dp" android:layout_height="24dp"
                             android:src="@drawable/survey_icon_white"
                             android:id="@+id/toolbar_survey"
                             android:layout_alignParentLeft="true"
                             android:background="@color/colorPrimaryDark"

                />
                <ImageButton android:layout_width="24dp" android:layout_height="24dp"
                             android:src="@drawable/add_icon_white"
                             android:id="@+id/toolbar_add"
                             android:layout_centerInParent="true"
                             android:background="@color/colorPrimaryDark"
                />
                <ImageButton android:layout_width="24dp" android:layout_height="24dp"
                             android:src="@drawable/alarm_icon_white"
                             android:id="@+id/toolbar_reminder"
                             android:layout_alignParentRight="true"
                             android:background="@color/colorPrimaryDark"
                />


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


</LinearLayout>

