<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Reminder.ReminderActivity">

    <LinearLayout
            android:id="@+id/llReminder"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
        >

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_reminder_label"
                    android:textSize="20dp"
                    android:textColor="@color/Black"
                    android:text="Daily Notifications"/>

            <android.support.v7.widget.SwitchCompat
                    android:id="@+id/timerSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
            />

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/ll_set_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:layout_weight="1"
            >

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical"
                >

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_reminder_time_label"
                            android:textSize="20dp"
                            android:textColor="@color/Black"
                            android:gravity=""
                            android:text="Set Reminder"/>
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/tv_reminder_time_desc"
                            android:text="8:00PM"
                    />
                </LinearLayout>


                <Button
                        android:id="@+id/set_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:text="Set time"
                />


            </RelativeLayout>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:id="@+id/close_btn_reminder"
            />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>